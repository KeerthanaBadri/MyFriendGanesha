rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // SECURITY NOTE:
    // This application uses a custom login system instead of Firebase Authentication.
    // Therefore, request.auth is not available.
    // For now, we allow read/write to authenticated users in the app logic,
    // but at the database level, we keep it open for the app to function.
    // 
    // RECOMMENDATION: Migrate to Firebase Authentication for true database-level security.
    
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
